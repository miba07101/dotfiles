{
  // -----------------------------------------------------------------------
  // Workbench UI
  // -----------------------------------------------------------------------
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "bottom",
  "window.menuBarVisibility": "toggle",
  "workbench.layoutControl.enabled": false,
  "editor.minimap.enabled": false,
  "workbench.preferredLightColorTheme": "Kanagawa Lotus",
  "workbench.preferredDarkColorTheme": "Kanagawa Wave",
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": true,
  "security.workspace.trust.untrustedFiles": "open",
  // -----------------------------------------------------------------------
  // Editor
  // -----------------------------------------------------------------------
  "editor.fontFamily": "Hack Nerd Font",
  "editor.fontSize": 14,
  "editor.cursorSurroundingLines": 8,
  "editor.renderWhitespace": "none",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.wordWrap": "off",
  //-------------------------------------------------------------------
  // Jupyter
  //-------------------------------------------------------------------
  "jupyter.enableExtendedPythonKernelCompletions": true,
  "notebook.lineNumbers": "on",
  "notebook.formatOnSave.enabled": true,
  "notebook.cellFocusIndicator": "border",
  //-------------------------------------------------------------------
  // LSP
  //-------------------------------------------------------------------
  "python.languageServer": "Default",
  "basedpyright.analysis.diagnosticMode": "openFilesOnly",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "notebook.defaultFormatter": "charliermarsh.ruff",
  // -----------------------------------------------------------------------
  // Git
  // -----------------------------------------------------------------------
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  // -----------------------------------------------------------------------
  // Kanagawa colorscheme
  // -----------------------------------------------------------------------
  "workbench.colorCustomizations": {
    "notebook.focusedCellBorder": "#7E9CD8",
    "[Kanagawa Lotus]": {
      "debugToolBar.background": "#DCD7BA",
      "dropdown.background": "#DCD7BA",
      "dropdown.border": "#DCD7BA",
      "editorBracketMatch.background": "#DCD7BA",
      "editorGroup.border": "#DCD7BA",
      "editorGroupHeader.tabsBackground": "#FEFEFA",
      "input.background": "#DCD7BA",
      "menubar.selectionBackground": "#DCD7BA",
      "menu.border": "#DCD7BA",
      "menu.selectionBackground": "#DCD7BA",
      "panel.border": "#DCD7BA",
      "sideBar.border": "#DCD7BA",
      "terminal.border": "#DCD7BA",
      "textBlockQuote.border": "#DCD7BA",
      "tab.inactiveBackground": "#EDEBDA",
      "editor.background": "#FEFEFA",
      "editorInlayHint.background": "#FEFEFA",
      "editorCursor.background": "#FEFEFA",
      "editorHoverWidget.background": "#FEFEFA",
      "editorWhitespace.foreground": "#FEFEFA",
      "editorWidget.background": "#FEFEFA",
      "panelSectionHeader.background": "#FEFEFA",
      "sideBar.background": "#FEFEFA",
      "tab.unfocusedHoverBackground": "#FEFEFA",
      "terminal.background": "#FEFEFA",
      "textBlockQuote.background": "#FEFEFA",
      "titleBar.inactiveBackground": "#FEFEFA",
      "walkThrough.embeddedEditorBackground": "#FEFEFA",
      "activityBar.background": "#EDEBDA",
      "badge.background": "#EDEBDA",
      "button.background": "#EDEBDA",
      "editorHoverWidget.border": "#EDEBDA",
      "editorIndentGuide.background1": "#EDEBDA",
      "list.focusBackground": "#EDEBDA",
      "list.inactiveSelectionBackground": "#EDEBDA",
      "peekViewEditor.background": "#EDEBDA",
      "scrollbarSlider.activeBackground": "#EDEBDA80",
      "tab.activeBackground": "#DCD7BA",
      "tab.border": "#EDEBDA",
      "editor.lineHighlightBackground": "#EDEBDA",
      "editor.wordHighlightBackground": "#EDEBDA40",
      "editor.wordHighlightStrongBackground": "#EDEBDA40",
      "editor.selectionHighlightBackground": "#EDEBDA80",
      "editorIndentGuide.activeBackground1": "#EDEBDA",
      "editorMarkerNavigation.background": "#EDEBDA",
      "list.activeSelectionBackground": "#EDEBDA",
      "list.hoverBackground": "#EDEBDA",
      "menu.background": "#EDEBDA",
      "peekViewResult.background": "#EDEBDA",
      "scrollbar.shadow": "#EDEBDA",
      "settings.focusedRowBackground": "#EDEBDA",
      "sideBarSectionHeader.background": "#EDEBDA",
      "tab.hoverBackground": "#EDEBDA",
      "titleBar.activeBackground": "#FEFEFA"
    },
    "statusBar.background": "#67217A",
    "statusBar.noFolderBackground": "#67217A",
    "statusBar.debuggingBackground": "#67217A",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.debuggingForeground": "#FFFFFF"
  },
  "editor.tokenColorCustomizations": {
    "[Kanagawa Lotus]": {
      "textMateRules": [
        {
          "name": "Comment",
          "scope": ["comment", "punctuation.definition.comment"],
          "settings": {
            "foreground": "#717C7C",
            "fontStyle": "italic"
          }
        }
      ]
    },
    "[Kanagawa Wave]": {
      "textMateRules": [
        {
          "name": "Comment",
          "scope": ["comment", "punctuation.definition.comment"],
          "settings": {
            "fontStyle": "italic"
          }
        }
      ]
    }
  },
  //-------------------------------------------------------------------
  // VIM
  //-------------------------------------------------------------------
  // Settings
  "vim.autoindent": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": false,
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true, // yank highlight
  "vim.highlightedyank.color": "#FF9E3B",
  "vim.highlightedyank.duration": 250,
  // Keybindings
  "vim.leader": "<space>",
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["i", "j"],
      "after": ["<Esc>"],
      "silent": true
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // Explorer
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"],
      "silent": true
    },
    // Comments
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"],
      "silent": true
    },
    // Duplicate selection
    {
      "before": ["<Leader>", "d"],
      "commands": ["editor.action.duplicateSelection"],
      "silent": true
    },
    // Formating
    {
      "before": ["<Leader>", "f", "d"],
      "commands": ["editor.action.formatDocument"],
      "silent": true
    },
    {
      "before": ["<Leader>", "f", "c"],
      "commands": ["notebook.formatCell"],
      "silent": true
    },
    // Quit
    {
      "before": ["<Leader>", "q"],
      "commands": ["workbench.action.closeActiveEditor"],
      "silent": true
    },
    // Window split vertical
    {
      "before": ["<leader>", "w", "v"],
      "commands": ["workbench.action.splitEditor"],
      "silent": true
    },
    // Files
    {
      "before": ["<leader>", "o", "f"],
      "commands": ["workbench.action.quickOpen"],
      "silent": true
    },
    // Clear search with <esc>
    {
      "before": ["<Esc>"],
      "commands": [":nohl"],
      "silent": true
    },
    // Show commands prompt
    {
      "before": [":"],
      "commands": ["workbench.action.showCommands"],
      "silent": true
    },
    // Better move in wrapp
    {
      "before": ["j"],
      "after": ["g", "j"],
      "silent": true
    },
    {
      "before": ["Down"],
      "after": ["g", "j"],
      "silent": true
    },
    {
      "before": ["k"],
      "after": ["g", "k"],
      "silent": true
    },
    {
      "before": ["Up"],
      "after": ["g", "k"],
      "silent": true
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    // Comments
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"],
      "silent": true
    },
    // Duplicate selection
    {
      "before": ["<Leader>", "d"],
      "commands": ["editor.action.duplicateSelection"],
      "silent": true
    },
    // Formating
    {
      "before": ["<Leader>", "f"],
      "commands": ["editor.action.formatSelection"],
      "silent": true
    }
  ],
  "vim.handleKeys": {
    "<C-b>": false,
    "<C-f>": false
  },
  // Extensions
  "vim.easymotion": false,
  "vim.surround": true,
  "vim.sneak": false,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#67217A", "#FFFFFF"],
  "vim.statusBarColors.insert": "#007ACD",
  "vim.statusBarColors.visual": "#427B00",
  "vim.statusBarColors.visualline": "#427B00",
  "vim.statusBarColors.visualblock": "#427B00",
  "vim.statusBarColors.replace": "#FF8800",
  "vim.statusBarColors.commandlineinprogress": "#007ACD",
  "vim.statusBarColors.searchinprogressmode": "#C8C093",
  "vim.statusBarColors.easymotionmode": "#007ACD",
  "vim.statusBarColors.easymotioninputmode": "#007ACD",
  "vim.statusBarColors.surroundinputmode": "#007ACD",
  // To improve performance
  "extensions.experimental.affinity": {
    "vscodiumvim.vim": 1
  },
  //-------------------------------------------------------------------
  // OTHERS
  //-------------------------------------------------------------------
  "workbench.colorTheme": "Kanagawa Lotus"
}
